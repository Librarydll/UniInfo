<!-- Slideshow container -->
<div class="slideshow-container">

    <!-- Full-width images with number and caption text -->
    <div class="mySlides fade-animation">
        <div class="numbertext">1 / 2</div>
        <img src="~/images/futuristicsearch.jpg" class="img-fluid">
        <div class="text">Выбор вуза</div>
        <a class="btn-about fade-animation" asp-action="Index" asp-controller="Equipment">
            Подробнее
        </a>
    </div>

    <div class="mySlides fade-animation">
        <div class="numbertext">2 / 2</div>
        <img src="~/images/futuristiclist.jpg" class="img-fluid">
        <div class="text">Список Вузов</div>
        <a class="btn-about fade-animation" asp-action="Index" asp-controller="Technology">
            Подробнее
        </a>
    </div>

   
    <!-- Next and previous buttons -->
    <a class="prev" id="arrow" onclick="plusSlides(-1)">&#10094;</a>
    <a class="next" id="arrow" onclick="plusSlides(1)">&#10095;</a>
</div>

<!-- The dots/circles -->
<div style="text-align:center">
    <span class="dot" onclick="currentSlide(1)"></span>
    <span class="dot" onclick="currentSlide(2)"></span>
</div>

