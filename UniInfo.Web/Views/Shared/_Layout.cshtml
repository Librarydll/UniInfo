@inject IViewLocalizer Localizer
@{ 
    var returnUrl = string.IsNullOrWhiteSpace(Context.Request.Path) ? "~" : $"~{Context.Request.Path.Value}";
    returnUrl += Context.Request.QueryString;

    var cookie = Context.Request.Cookies[".AspNetCore.Culture"];
    string uz = "";
    string ru = "";

    if (!string.IsNullOrWhiteSpace(cookie)&&cookie.Contains("uz"))
    {
        uz = "lang-selected";
    }
    else
    {
        ru = "lang-selected";
    }
}
<!DOCTYPE html>
<html lang="en">
<head>
    <base href="/">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>UniInfo</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/css/mediaquery.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@600&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Chakra+Petch:wght@500&display=swap" rel="stylesheet">
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Exo+2:wght@700&family=Jura:wght@700&display=swap" rel="stylesheet">

</head>
<body class="body-bg">
    <div class="d-flex flex-column " style="min-height:100vh">
        <header id="site-header">
            <div id="header_area" class="bg-header">
                <div class="container">
                    <nav class="navbar navbar-expand-lg navbar-dark bg-header">
                        <a class="navbar-brand logo" id="site-icon-id" asp-action="Index" asp-controller="Home">UniInfo</a>
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarColor02">
                            <ul class="navbar-nav mr-auto" id="navUl">
                                <li class="nav-item nav-line">
                                    <a class="nav-link" asp-action="Index" asp-controller="Home">@Localizer["Main"]</a>
                                </li>
                                <li class="nav-item nav-line">
                                    <a class="nav-link" asp-action="Index" asp-controller="UniversityFilter">@Localizer["FilterUniversity"]</a>
                                </li>
                                <li class="nav-item nav-line">
                                    <a class="nav-link" asp-action="Index" asp-controller="UniversityList">@Localizer["AllUniversity"]</a>
                                </li>
                            </ul>
                        </div>


                        <form id="selectLanguage" asp-controller="Home" asp-route-returnUrl="@returnUrl"
                              asp-action="SetLanguage" method="post" class="form-inline" role="form">

                            <div class="d-flex flex-row flex-wrap">
                                <input class="item-btn item-btn-sub item-text cursor-poiter input-lang @uz" id="uz_input_lang_id" type="submit" name="culture" asp-for="@Localizer["LangUz"].Value" />
                                <input class="item-btn item-btn-sub item-text cursor-poiter input-lang @ru" id="ru_input_lang_id" type="submit" name="culture" asp-for="@Localizer["LangRu"].Value" />
                            </div>
                        </form>
                    </nav>

                </div>
                <div>

                </div>
            </div>
        </header>
        <div style="flex:1 1 auto;">
            @RenderBody()
        </div>
        <footer class="footer">
            <div class="container">
                <div class="d-flex justify-content-center" id="footer-element-container">
                    <a href="https://t.me/KomilKhamidov"><i class="fa fa-telegram icon"></i></a>
                    <a><i class="fa fa-envelope-square icon"></i> library.dll@mail.ru</a>
                </div>
            </div>
        </footer>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>